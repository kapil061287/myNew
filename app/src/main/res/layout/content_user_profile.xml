<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.depex.eatasmuch.user.screens.UserProfileActivity"
    tools:showIn="@layout/activity_user_profile">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/profile_pic"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/profile_pic_back"
                                android:padding="2dp" />

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:id="@+id/myprofile_camera"
                                android:layout_gravity="right"
                                android:layout_marginTop="-15dp"
                                android:background="@drawable/camera_btn_draw"
                                android:padding="5dp"
                                android:src="@drawable/ic_menu_camera" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17dp"
                                android:fontFamily="@font/open_sans"
                                android:textStyle="bold"
                                android:layout_gravity="center_horizontal"
                                android:text="Mr. Smith" />


                        </LinearLayout>
                    </FrameLayout>

                </FrameLayout>

            </android.support.v7.widget.CardView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/open_sans"
                android:paddingRight="@dimen/draw_right_padding"
                android:layout_marginLeft="@dimen/margin_left_input"
                android:layout_marginRight="@dimen/margin_right_input"
                android:layout_marginTop="@dimen/margin_top_profile"
                android:background="@drawable/input_background"
                android:drawableRight="@drawable/ic_mode_edit_black_24dp"
                android:hint="First Name"
                android:paddingLeft="10dp" />

            <EditText
                android:paddingRight="@dimen/draw_right_padding"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/open_sans"
                android:layout_marginLeft="@dimen/margin_left_input"
                android:layout_marginRight="@dimen/margin_right_input"
                android:layout_marginTop="@dimen/margin_top_profile"
                android:background="@drawable/input_background"
                android:drawableRight="@drawable/ic_mode_edit_black_24dp"
                android:hint="Last Name"
                android:paddingLeft="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingRight="@dimen/draw_right_padding"
                android:fontFamily="@font/open_sans"
                android:layout_marginLeft="@dimen/margin_left_input"
                android:layout_marginRight="@dimen/margin_right_input"
                android:layout_marginTop="@dimen/margin_top_profile"
                android:background="@drawable/input_background"
                android:drawableRight="@drawable/ic_mode_edit_black_24dp"
                android:hint="Email Address"
                android:paddingLeft="10dp" />

            <EditText
                android:paddingRight="@dimen/draw_right_padding"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="number"
                android:fontFamily="@font/open_sans"
                android:layout_marginLeft="@dimen/margin_left_input"
                android:layout_marginRight="@dimen/margin_right_input"
                android:layout_marginTop="@dimen/margin_top_profile"
                android:background="@drawable/input_background"
                android:drawableRight="@drawable/ic_mode_edit_black_24dp"
                android:hint="Contact"
                android:paddingLeft="10dp" />

            <EditText
                android:paddingRight="@dimen/draw_right_padding"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/open_sans"
                android:layout_marginLeft="@dimen/margin_left_input"
                android:layout_marginRight="@dimen/margin_right_input"
                android:layout_marginTop="@dimen/margin_top_profile"
                android:background="@drawable/input_background"
                android:drawableRight="@drawable/ic_mode_edit_black_24dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/open_sans"
                android:paddingRight="@dimen/draw_right_padding"
                android:layout_marginLeft="@dimen/margin_left_input"
                android:layout_marginRight="@dimen/margin_right_input"
                android:layout_marginTop="@dimen/margin_top_profile"
                android:background="@drawable/input_background"
                android:drawableRight="@drawable/ic_mode_edit_black_24dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />
            <Button
                android:layout_width="match_parent"
                android:fontFamily="@font/open_sans"
                android:layout_marginTop="@dimen/margin_top_profile"
                android:background="@drawable/profile_submit_back"
                android:text="Submit"
                android:textColor="#FFFFFFFF"
                android:layout_marginRight="@dimen/margin_right_input"
                android:layout_marginLeft="@dimen/margin_left_input"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
