<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_gravity="center_vertical"
                android:id="@+id/item_remove_btn"
                android:background="@drawable/ic_remove_circle_primary_dark_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="FoodITem"
                android:textColor="#ff000000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:id="@+id/food_name_category"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Food Item Size"
                android:id="@+id/size_food_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_price_with_quantity"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
            <Button
                android:layout_gravity="center_vertical"
                android:id="@+id/item_add_btn"
                android:background="@drawable/ic_add_circle_primary_dark_24dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>