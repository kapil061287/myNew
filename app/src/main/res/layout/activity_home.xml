<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_screen_back"
    tools:context="com.depex.eatasmuch.user.screens.HomeActivity">

    <LinearLayout
        android:layout_width="252dp"
        android:layout_height="272dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="160dp"
            android:background="@drawable/logo1"
            android:layout_gravity="center_horizontal"
            android:layout_height="100dp" />
        <TextView
            android:text="Find Local"
            android:textColor="#ff333333"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/open_sans"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/open_sans"
            android:textSize="35dp"
            android:text="Restaurants"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <AutoCompleteTextView
            android:layout_marginTop="5dp"
            android:background="@drawable/input_background"
            android:drawableRight="@drawable/ic_search_black_24dp"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:fontFamily="@font/open_sans"
            android:id="@+id/auto_pin_complete_textview"
            android:layout_marginRight="@dimen/margin_right_input"
            android:layout_marginLeft="@dimen/margin_left_input"
            android:layout_height="45dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="@color/conneced"
        android:gravity="center_horizontal"
        android:text="network available"
        android:visibility="gone"
        android:fontFamily="@font/open_sans"
        android:id="@+id/network_info"
        android:textColor="#ffffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
